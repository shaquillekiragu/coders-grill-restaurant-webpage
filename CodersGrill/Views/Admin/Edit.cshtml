@model CodersGrill.Models.TextContent

<h2>Edit Content</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Section" class="control-label"></label>
        <input asp-for="Section" class="form-control" readonly />
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContentType" class="control-label"></label>
        <input asp-for="ContentType" class="form-control" readonly />
        <span asp-validation-for="ContentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HtmlContent" class="control-label"></label>
        <textarea asp-for="HtmlContent" class="form-control"></textarea>
        <span asp-validation-for="HtmlContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}